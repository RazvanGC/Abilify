<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Abilify.MicroApps.ColourBlindPage"
             Title="Colorblind Image Processor">

    <StackLayout Padding="20" Spacing="15">
        <Button Text="Load Photo" Clicked="OnLoadPhotoClicked"/>

        <Image x:Name="FilteredImage" WidthRequest="300" HeightRequest="300"/>

        <Button Text="Apply Protanopia Filter" Clicked="OnApplyFilterClicked"/>

        <!-- Loading Indicator -->
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
        <Label x:Name="LoadingLabel" Text="Processing image, please wait..." IsVisible="False" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
