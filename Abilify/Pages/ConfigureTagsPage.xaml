<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Abilify.PageModels"
             x:Class="Abilify.Pages.ConfigureTagsPage"
             x:DataType="pageModels:ConfigureTagsPageModel"
             xmlns:models="clr-namespace:Abilify.Models"
             Title="Configure Tags">

    <ContentPage.Content>
        <Grid Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- This row will take up remaining space for scrollable content -->
                <RowDefinition Height="Auto" />
                <!-- This row is for the "Save" button -->
            </Grid.RowDefinitions>

            <!-- Scrollable content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout>
                    <Label Text="Configure Your Tool Preferences"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Margin="10"/>

                    <!-- Tags List -->
                    <CollectionView ItemsSource="{Binding UserTags}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:UserTag">
                                <Border Padding="10"
                                       Margin="0,5"
                                       BackgroundColor="{DynamicResource LightSecondaryBackground}">
                                    <HorizontalStackLayout>
                                        <CheckBox IsChecked="{Binding IsSelected}" />
                                        <Label Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Start"
                                               FontSize="16" />
                                    </HorizontalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Save button, always at the bottom -->
            <Button Grid.Row="1"
                    Text="Save"
                    Command="{Binding SaveTagsCommand}"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="Fill"
                    Margin="20" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
