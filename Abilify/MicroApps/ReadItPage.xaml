<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Abilify.MicroApps.ReadItPage">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20">

        <!-- TextBox for text input with dynamic height -->
        <Editor x:Name="TextEditor"
                Placeholder="Enter text to read"
                MinimumHeightRequest="300"
                VerticalOptions="FillAndExpand" />

        <!-- Button to start reading -->
        <Button Text="Start Reading"
                Clicked="OnSpeakClicked" />

        <!-- Button to stop reading -->
        <Button Text="Stop"
                Clicked="OnStopClicked" />

    </StackLayout>
</ContentPage>
